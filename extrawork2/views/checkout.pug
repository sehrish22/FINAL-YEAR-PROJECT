extends layout

block content
  .checkout-container
    h1 Checkout

    .order-summary
      h2 Order ID: #{orderId}
      h3 Your Order Summary:
      if cart.length
        .cart-items
          each item in cart
            .cart-item
              img.cart-item-image(src=item.product.image, alt=item.product.name)
              .cart-item-details
                h4.cart-item-name= item.product.name
                p.cart-item-info Quantity: #{item.quantity}
                p.cart-item-info Price: $#{item.product.price}
                p.cart-item-subtotal Subtotal: $#{item.product.price * item.quantity}
        .cart-total
          h3 Total Amount: $#{total}

        .checkout-form
          form(action="/products/checkout", method="post")
            .form-group
              label(for="email") Email
              input.form-control#email(type="text", name="email", required, placeholder="Enter your email")
            .form-group
              label(for="name") Name
              input.form-control#name(type="text", name="name", required, placeholder="Enter your name")
            .form-group
              label(for="address") Address
              textarea.form-control#address(name="address", required, placeholder="Enter your delivery address")
            .form-group
              label(for="contact") Contact
              input.form-control#contact(type="text", name="contact", required, placeholder="Enter your contact number")
            .form-group
              label(for="payment") Payment Method
              select.form-control#payment(name="payment", required)
                option(value="cash") Cash on Delivery
            input(type="hidden", name="orderId", value=orderId)
            button.btn.btn-primary(type="submit") Complete Checkout
      else
        p Your cart is empty.

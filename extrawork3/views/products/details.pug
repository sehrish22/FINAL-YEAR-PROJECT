extends ../layout

block content
    .container
        .row
            .col-md-6
                if product.image
                    img(src=product.image, alt=product.name, class="img-fluid")
            .col-md-6
                h1= product.name
                p Type: #{product.type}
                p Price: $#{product.price}
                p Description: #{product.description}
                p In Stock: #{product.instock}
                if user
                    .btn-group
                        a(href="/products/edit/"+product._id, class="btn btn-warning") Edit
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete

                a(href="/products/cart/"+product._id, class="btn btn-info") Add to Cart
                a(href="/products", class="btn btn-secondary") Back to Products

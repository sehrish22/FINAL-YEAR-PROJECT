extends layout

block content
  link(rel='stylesheet', href='/stylesheets/sitter-application.css')
  .sitter-container
    h1 Apply to Become a PetSitter

    form.sitter-form(action="/sitter-application" method="POST")
      .form-columns
        .form-left
          .form-group
            label(for="name") Full Name:
            input#name(type="text" name="name" required)

          .form-group
            label(for="email") Email:
            input#email(type="email" name="email" required)

          .form-group
            label(for="phone") Phone Number:
            input#phone(type="text" name="phone" required)

        .form-right
          .form-group
            label(for="address") Address:
            input#address(type="text" name="address" required)

          .form-group
            label(for="experience") Years of Experience:
            input#experience(type="number" name="experience" min="0" required)

          .form-group
            p.experience-text Sitting experience, providing loving and reliable care for feline companions
            label(for="pets") Pets You Can Care For:
            input#pets(type="text" name="pets" placeholder="e.g., dogs, cats, birds" required)

      button(type="submit") Submit Application

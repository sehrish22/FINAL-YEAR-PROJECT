extends ../layout

block content
  h1 Add New Product
  form(action="/products/add", method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input(type="text", class="form-control", id="name", name="name", required,placeholder="Enter name of your product")
    .form-group
      label(for="type") Type
      input(type="text", class="form-control", id="type", name="type", required, placeholder="Enter Cat/Dog/Rat or the name of pet(whose product you are uploading) followed by first capital letter")
    .form-group
      label(for="price") Price
      input(type="text", class="form-control", id="price", name="price", required,placeholder="Enter price of your product")
    .form-group
      label(for="description") Description
      textarea(class="form-control", id="description", name="description", required,placeholder="Enter description of your product")
    .form-group
      label(for="instock") In stock
      textarea(class="form-control", id="instock", name="instock", required,placeholder="Enter the quantity of product")
    .form-group
      label(for="image") Product Image
      input(type="file", class="form-control", id="image", name="image")
    button(type="submit", class="btn btn-success") Add Product
extends ../layout

block content
    link(rel='stylesheet' href='/stylesheets/petslist.css')
    .container
        .row.header-container 
            .col-12
                h1.page-title Find Your Perfect Pet Companion
            if user
                .col-sm-3.text-right
                    a.btn.btn-add-pet(href="/pets/petsadd") + Add New Pet 

        .row.pet-list
            each pet in pets
                .col-md-4.col-sm-6.mb-4
                    .card.pet-card
                        if pet.image
                            img.card-img-top(src=pet.image, alt=pet.name)
                        .card-body
                            h5.card-title 
                                a.pet-link(href="/pets/"+pet._id)= pet.name
                            p.card-text.type 🐾 Type: #{pet.type}
                            p.card-text.price 💰 Price: Rs.#{pet.fee}
                            p.card-text.description 📌 Description: #{pet.description}
                            
                            .btn-group.action-buttons
                                a.btn.btn-adopt(href="/pets/adoptionrequest/" + pet._id) 🏡 Adoption Request
                                if user
                                    a.btn.btn-edit(href="/pets/edit/"+pet._id) ✏️ Edit
                                    a.btn.btn-delete(href="/pets/delete/"+pet._id) 🗑 Delete

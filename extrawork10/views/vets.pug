extends layout

block content
  link(rel='stylesheet', href='/stylesheets/vets.css')

  h1.page-title 🏥 Vet Clinics Across Pakistan

  if user && user.role === "admin"
    .admin-panel
      h2 Vet Clinic Management
      a.btn.btn-green(href="/admin/vets/new") ➕ Add New Vet Clinic

  .vet-container
    each vet in vets
      .vet-card
        h2.vet-name= vet.name
        p.vet-info 📍 <strong>Address:</strong> #{vet.address}
        p.vet-info 📞 <strong>Phone:</strong> #{vet.contact}
        p.vet-info ⏰ <strong>Opening Time:</strong> #{vet.openingTime}
        p.vet-info ⏳ <strong>Closing Time:</strong> #{vet.closingTime}

        if user && user.role === "admin"
          .vet-actions
            a.btn.btn-brown(href=`/admin/vets/edit/${vet._id}`) ✏️ Edit
            a.btn.btn-red(href=`/admin/vets/delete/${vet._id}`) 🗑️ Delete
extends layout

block content
  link(rel='stylesheet' href='/stylesheets/adoptionrequest.css')

  .adoption-container
    h1.adoption-title Adoption Request 
    h2.pet-name #{pet.name}
    img(src=pet.image, alt=pet.name, class="adoption-image")

    .adoption-details
      h3 Request ID: #{adoptionRequestId}

    form.adoption-form(action="/admin/adoptionrequests", method="post")
      input(type="hidden", name="petId", value=pet._id)
      input(type="hidden", name="adoptionRequestId", value=adoptionRequestId)

      .form-group
        label(for="email") Email:
        input#email.form-control(type="email", name="email", required,placeholder="Enter your email")

      .form-group
        label(for="name") Name:
        input#name.form-control(type="text", name="name", required, placeholder="Enter your name")

      .form-group
        label(for="address") Address:
        textarea#address.form-control(name="address", required, placeholder="Enter your Address")

      .form-group
        label(for="contact") Contact:
        input#contact.form-control(type="text", name="contact", required, placeholder="Enter your contact number")

      button.btn-submit(type="submit") Submit Request

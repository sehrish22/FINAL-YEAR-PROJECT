extends ../layout

block content
  .admin-adoption-container
    h2.admin-adoption-title Adoption Requests
    if adoptionrequests && adoptionrequests.length > 0
      .admin-adoption-grid
        each adoptionrequest in adoptionrequests
          .admin-adoption-card
            .admin-adoption-card-body
              p.admin-adoption-text Name: #{adoptionrequest.name}
              p.admin-adoption-text Email: #{adoptionrequest.email}
              p.admin-adoption-text Address: #{adoptionrequest.address}
              p.admin-adoption-text Contact: #{adoptionrequest.contact}
    else
      p.admin-no-adoption-requests No adoption requests to display.

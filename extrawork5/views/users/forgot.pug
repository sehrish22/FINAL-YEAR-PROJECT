extends ../layout

block content
  h1 Reset Password
  if message
    .alert.alert-info #{message}
  form(action="/users/forgot", method="post")
    .form-group
      label(for="email") Enter your email
      input#email(type="email", name="email", class="form-control")
    input(type="submit", value="Request Password Reset", class="btn btn-primary")

extends ../layout

block content
  h1 Edit Store

  form(action=`/admin/stores/edit/${store._id}` method="POST")
    label Store Name:
    input(type="text" name="name" value=store.name required)

    label Address:
    input(type="text" name="address" value=store.address required)

    label Phone Number:
    input(type="text" name="contact" value=store.contact required)

    label Opening Time:
    input(type="text" name="openingTime" value=store.openingTime required)

    label Closing Time:
    input(type="text" name="closingTime" value=store.closingTime required)

    button(type="submit") Update Store
